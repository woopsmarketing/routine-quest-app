{
  "name": "@routine-quest/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared utilities and configurations for Routine Quest App",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "dependencies": {
    "typescript": "catalog:",
    "@types/node": "catalog:"
  },
  "devDependencies": {
    "jest": "catalog:",
    "@jest/types": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:"
  },
  "keywords": [
    "shared",
    "utilities",
    "types",
    "constants",
    "routine-quest"
  ]
}