FROM python:3.11-slim

# ğŸ·ï¸ ë©”íƒ€ë°ì´í„°
LABEL maintainer="Routine Quest Team"
LABEL description="AI microservice for Routine Quest coach features"

# ğŸ“ ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# ğŸ”§ ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ (AI ë¼ì´ë¸ŒëŸ¬ë¦¬ìš©)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“¦ Python ì˜ì¡´ì„± ì„¤ì¹˜
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ğŸ“‹ ì• í”Œë¦¬ì¼€ì´ì…˜ ì½”ë“œ ë³µì‚¬
COPY . .

# ğŸ‘¤ ë¹„ë£¨íŠ¸ ì‚¬ìš©ì ìƒì„±
RUN useradd --create-home --shell /bin/bash ai \
    && chown -R ai:ai /app
USER ai

# ğŸŒ í¬íŠ¸ ë…¸ì¶œ
EXPOSE 8001

# ğŸ¥ í—¬ìŠ¤ì²´í¬
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# ğŸš€ ì‹¤í–‰ ëª…ë ¹
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8001"]