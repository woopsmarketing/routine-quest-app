{
  "name": "@routine-quest/ai",
  "version": "1.0.0", 
  "private": true,
  "description": "AI microservice for Routine Quest App",
  "main": "app/main.py",
  "scripts": {
    "dev": "uvicorn app.main:app --host 0.0.0.0 --port 8001 --reload",
    "start": "gunicorn app.main:app -w 2 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:8001",
    "test": "pytest -v",
    "test:unit": "pytest tests/unit -v",
    "test:integration": "pytest tests/integration -v",
    "test:coverage": "pytest --cov=app --cov-report=html --cov-report=term",
    "lint": "ruff check app tests",
    "lint:fix": "ruff check app tests --fix", 
    "format": "black app tests",
    "format:check": "black app tests --check",
    "type-check": "mypy app",
    "build": "echo 'AI service build complete'",
    "clean": "find . -type d -name __pycache__ -delete && find . -name '*.pyc' -delete"
  },
  "dependencies": {
    "python": ">=3.11"
  },
  "devDependencies": {},
  "engines": {
    "python": ">=3.11"
  },
  "files": [
    "app/",
    "requirements.txt"
  ],
  "keywords": [
    "ai",
    "python", 
    "langchain",
    "openai",
    "anthropic",
    "microservice"
  ]
}