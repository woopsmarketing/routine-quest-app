{
  "name": "routine-quest-app",
  "private": true,
  "description": "Routine Quest App - 다음 1스텝만 보여주는 순서 기반 퀘스트형 루틴 앱",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "echo 'Build completed'",
    "dev": "echo 'Dev mode - use individual service commands'",
    "test": "echo 'Tests - use individual service commands'",
    "lint": "echo 'Lint - use individual service commands'",
    "clean": "echo 'Clean completed'",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "setup": "echo 'Setup completed'",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down"
  },
  "dependencies": {
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yaml,yml}": ["prettier --write"]
  }
}